<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/logo_bg_color</item>
        <item name="colorPrimaryDark">@color/logo_bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/fb_btn</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#546E7A</item>
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:background">#B0BEC5</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#000334</item>
        <item name="android:progressTint">#223680</item>
        <item name="android:colorControlActivated">#223680</item>
    </style>


</resources>
